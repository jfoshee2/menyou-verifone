<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.james.menyou_verifone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/menyou_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".item.CreateMenuItemActivity" />
        <activity android:name=".item.MenuItemDetailActivity" />
        <activity android:name=".order.MainOrderActivity" />
        <activity android:name=".order.CreateOrderActivity" />
        <activity android:name=".order.OrderDetailActivity" />
        <activity
            android:name=".filter.FilterFragment"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>